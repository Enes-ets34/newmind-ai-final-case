{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "baseUrl": "./",
    "outDir": "./dist",
    "skipLibCheck": true,
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@assets/*": ["src/assets/*"],
      "@theme/*": ["src/theme/*"],
      "@store/*": ["src/store/*"],
      "@api/*": ["src/api/*"]
    },
    "jsx": "react-jsx",
    "types": ["react", "react-dom"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true
  },
  "include": ["src"]
}
